script/source = "extends KinematicBody2D
var motion = Vector2()
var speed = 0
var speedMax = 400
var acc = 25
var fric = 1
var angle = 0
var angleSpeed = 4

func _physics_process(delta):
	#change direction
	if Input.is_action_pressed('ui_right'):
		angle+=angleSpeed*speed/speedMax+.5
	elif Input.is_action_pressed('ui_left'):
		angle-=angleSpeed*speed/speedMax+.5
	#change speed
	if Input.is_action_pressed('ui_up'): #accelerate
		if speed <= speedMax:
			speed+=acc
			if speed > speedMax:
				speed = speedMax
	elif Input.is_action_pressed('ui_down'): #brake
		if speed > 0:
			speed -= fric*10
			if speed < 0:
				speed = 0
	elif speed > 0: #slowdown
		speed -= fric
		if speed < 0 or is_on_wall():
			speed = 0
	#update speed and direction
	motion.x = speed*cos((angle)*PI/180)
	motion.y = speed*sin((angle)*PI/180)
	rotation_degrees = angle-90
	move_and_slide(motion)"

